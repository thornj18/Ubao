<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.somaubao.ubao" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ubao_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ubao"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Read"
            android:label="@string/title_activity_read"
            android:parentActivityName=".ubao" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.somaubao.ubao.ubao" />
        </activity>

        <activity android:name=".login" android:label="@string/activity_login">
            </activity>

        <activity android:name=".Signup" android:label="@string/activity_signup">
           </activity>

        <activity android:name=".Subscriptions" android:label="@string/activity_subscriptions">
            </activity>

        <activity android:name=".Start" android:label="@string/activity_start">
            </activity>

        <activity android:name=".Postview" android:label="@string/Postview">
        </activity>

    </application>

</manifest>
